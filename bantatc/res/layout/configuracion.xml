<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >

	<ScrollView
	    android:id="@+id/scrollView1"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true" >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_alignParentBottom="true"
	        android:orientation="vertical" >

	        <TextView
	            android:id="@+id/c_lb_server"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Servidor:"
	            android:textStyle="bold" />

	        <EditText
	            android:id="@+id/c_ed_server"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="15dp"
	            android:layout_marginRight="15dp"
	            android:hint="Servidor"
	            android:inputType="number" >

	            <requestFocus />
	        </EditText>

	        <TextView
	            android:id="@+id/c_lb_port"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:inputType="numberSigned"
	            android:text="Puerto:"
	            android:textStyle="bold" />

	        <EditText
	            android:id="@+id/c_ed_port"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="15dp"
	            android:layout_marginRight="15dp"
	            android:hint="Puerto"
	            android:inputType="number" />

	        <TextView
	            android:id="@+id/c_lb_user"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Usuario:"
	            android:textStyle="bold" />

	        <EditText
	            android:id="@+id/c_ed_user"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="15dp"
	            android:layout_marginRight="15dp"
	            android:hint="Usuario" />

	        <TextView
	            android:id="@+id/c_lb_pwd"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Contraseña:"
	            android:textStyle="bold" />

	        <EditText
	            android:id="@+id/c_ed_pwd"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="15dp"
	            android:layout_marginRight="15dp"
	            android:hint="Contraseña"
	            android:inputType="textPassword" />

	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="126dp"
	                android:orientation="horizontal" >

	                <Button
	                    android:id="@+id/c_b_test"
	                    android:layout_width="match_parent"
	                    android:layout_height="70dp"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginTop="20dp"
	                    android:layout_marginRight="10dp"
	                    android:layout_weight="0.28"
	                    android:background="@drawable/buttons" 
	                    android:onClick="probar"
	                    android:text="Probar Conexion"
	                    android:textStyle="bold" />

	                <Button
	                    android:id="@+id/c_b_test1"
	                    android:layout_width="match_parent"
	                    android:layout_height="70dp"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginTop="20dp"
	                    android:layout_marginRight="10dp"
	                    android:layout_weight="0.28"
	                    android:background="@drawable/buttons" 
	                    android:onClick="probar_u"
	                    android:text="Validar Usuario"
	                    android:textStyle="bold" />

"
	            </LinearLayout>

	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="126dp" >

	                <Button
	                    android:id="@+id/c_b_clean"
	                    android:layout_width="match_parent"
	                    android:layout_height="70dp"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginTop="0dp"
	                    android:layout_marginRight="10dp"
	                    android:layout_weight="0.28"
	                    android:background="@drawable/buttons" 
	                    android:onClick="limpiar"
	                    android:text="Vaciar"
	                    android:textStyle="bold" />

	                <Button
	                    android:id="@+id/c_b_mod"
	                    android:layout_width="match_parent"
	                    android:layout_height="70dp"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginTop="0dp"
	                    android:layout_marginRight="10dp"
	                    android:layout_weight="0.28"
	                    android:background="@drawable/buttons" 
	                    android:onClick="guardar"
	                    android:text="Guardar"
	                    android:textStyle="bold" />

	            </LinearLayout>

	    </LinearLayout>

	</ScrollView>

</RelativeLayout>

