<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/RelativeLayout1"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<TextView
		android:id="@+id/tv_codigo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:text="CÃ³digo:"
	/>
	<EditText
		android:id="@+id/Txt_codigo"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tv_codigo"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="15dp"
	>
	</EditText>

	<TextView
		android:id="@+id/tv_nombre"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/Txt_codigo"
		android:text="Nombre:"
	/>

	<EditText
		android:id="@+id/txt_nombre"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/tv_nombre"
		android:layout_marginLeft="15dp"
	/>

	<TextView
		android:id="@+id/tv_stock"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/txt_nombre"
		android:text="Stock:"
	/>

	<EditText
		android:id="@+id/txt_stock"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tv_stock"
		android:layout_alignParentLeft="true"
		android:inputType="numberSigned"
		android:layout_marginLeft="15dp"
		>
		<requestFocus />
	</EditText>
	<TextView
		android:id="@+id/tv_precio"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/txt_stock"
		android:text="Precio:"
		/>
	<EditText
		android:id="@+id/txt_precio"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_below="@+id/tv_precio"
		android:inputType="numberDecimal"
		android:layout_marginLeft="15dp"
	/>

	<Button
		android:id="@+id/Btn_Modificar"
		android:layout_width="114dp"
		android:layout_height="70dp"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:onClick="modificar"
		android:text="Guardar"
	/>

	<Button
		android:id="@+id/Btn_Delete"
		android:layout_width="114dp"
		android:layout_height="70dp"
		android:layout_toRightOf="@+id/Btn_Modificar"
		android:layout_alignParentBottom="true"
		android:onClick="eliminar"
		android:text="Eliminar"
		/>

</RelativeLayout>