<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    tools:context=".Mantenedor_Producto" >

    <Button
        android:id="@+id/Btn_Adm_Pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="man_pro"
        android:text="Administración de Productos" />

    <Button
        android:id="@+id/Btn_Rep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Btn_Adm_Pro"
        android:layout_alignRight="@+id/Btn_Adm_Pro"
        android:layout_below="@+id/Btn_Adm_Pro"
        android:layout_marginTop="15dp"
        android:onClick="reportes"
        android:text="Reportes" />

    <Button
        android:id="@+id/Btn_Gra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Btn_Rep"
        android:layout_alignRight="@+id/Btn_Rep"
        android:layout_below="@+id/Btn_Rep"
        android:layout_marginTop="14dp"
		android:onClick="graficos"
        android:text="Gráficos" />
	<Button
		android:id="@+id/Btn_Config"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/Btn_Rep"
		android:layout_alignRight="@+id/Btn_Rep"
		android:layout_below="@+id/Btn_Gra"
		android:layout_marginTop="14dp"
		android:onClick="configuracion"
		android:text="Configuración" />

</RelativeLayout>
